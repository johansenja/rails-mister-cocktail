<div id="cocktails-index">
  <h1 style="margin-top: 120px;">Our Cocktails</h1>
  <%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-success add-new" %>
  <div class="cards">
    <div class="row">
      <% i = 1 %>
      <% @cocktails.each do |cocktail| %>
        <%= link_to cocktail_path(cocktail) do %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.3) 0%, rgba(0,36,61,0.3) 50%), url('https://loremflickr.com/320/240/cocktail?random=<%= i %>');">
            <%= cocktail.name %>
            <% i += 1 %>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
