<% if @cocktail.image? %>
    <div class="card-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.3) 0%, rgba(0,36,61,0.3) 50%), url('<%= cl_image_path @cocktail.image, height: 300, width: 400, crop: :fill %>');">
<% else %>
    <div class="card-banner">
<% end %>
  <h1><%= @cocktail.name %></h1>
  <p><%= @cocktail.method %></p>
<% @doses.each do |dose| %>
  <p><%= "#{dose.description} #{dose.ingredient.name}" %></p>
<% end %>
    <%= link_to root_path, class: "btn btn-space" do %>
      <i class="fas fa-undo arrow-back"></i>
    <% end %>
    <%= link_to edit_cocktail_path, class: "btn-space" do%>
      <i class="fas fa-pencil-alt pencil-edit"></i>
    <% end %>
    <%= link_to cocktail_path(@cocktail), method: :delete, class: "btn btn-space" do %>
      <i class="fas fa-trash-alt trash-delete"></i>
    <% end %>
    </div>

