<div class="banner-container" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.3) 0%, rgba(0,36,61,0.3) 50%), url('<%= cl_image_path @cocktail.image, height: 300, width: 400, crop: :fill %>');">
  <h1><%= @cocktail.name %></h1>
<p><%= @cocktail.method %></p>
<% @doses.each do |dose| %>
  <p><%= "#{dose.description} #{dose.ingredient.name}" %></p>
<% end %>
<%= link_to "Edit this cocktail", edit_cocktail_path %>
<%= link_to "Delete this cocktail", cocktail_path(@cocktail), method: :delete %>
<%= link_to "Back", root_path %>
</div>

